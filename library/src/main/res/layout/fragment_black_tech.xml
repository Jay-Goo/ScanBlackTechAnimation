
<jaygoo.com.animation.depth.DepthRelativeLayoutContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayoutContainer1"
    android:background="#333333"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jaygoo.com.animation.depth.DepthRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_bar"
        android:id="@+id/RelativeLayoutContainer2"
        android:background="@android:color/transparent"
        app:depth_value="2dp"
        app:depth_elevation="0dp"
        app:depth_zIndex="0">

        <ImageView
            android:id="@+id/srcImageView"
            android:background="#333333"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />

    </jaygoo.com.animation.depth.DepthRelativeLayout>

    <jaygoo.com.animation.depth.DepthRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_bar"
        android:background="@android:color/transparent"
        app:depth_value="0dp"
        app:depth_elevation="0dp"
        app:depth_zIndex="3">

        <jaygoo.com.animation.widgets.ScanImageView
            android:id="@+id/maskImageView"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </jaygoo.com.animation.depth.DepthRelativeLayout>

</jaygoo.com.animation.depth.DepthRelativeLayoutContainer>
